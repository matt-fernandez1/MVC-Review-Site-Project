<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header role="banner">
        <div class="mainHeader">
            <h1>Worldly Reviews</h1>
            <p>Providing you coverage and recommendations on the technology that helps you live your life.</p>
        </div>
    </header>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Worldly Reviews</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="http://localhost:55836/Reviews/Index#">Reviews</a></li>
                <li><a href="http://localhost:55836/Reviews/Index#">Categories</a></li>
            </ul>
        </div>
    </nav>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                  
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Brought to You By: Worldly Reviews, currently under construction for a sexier user experience.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
